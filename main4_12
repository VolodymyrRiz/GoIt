from random import randint
#count = 0
#result = ''
#password = ''
i = 0

def get_random_password():
    result = ""
    count = 0
      
    while count < 8:
        random_symbol = chr(randint(40, 126))
        result = result + random_symbol
        count = count + 1     
        password = result
                    
    return is_valid_password(password)


def is_valid_password(password):
    if len(password) != 8:
        return False

    has_upper = False
    has_lower = False
    has_num = False

    for ch in password:
        if ch.isupper():
            has_upper = True
        elif ch.islower():
            has_lower = True
        elif ch.isdigit():
            has_num = True
    if has_upper and has_lower and has_num:
        return password
    else:
        return 'Try more'


def get_password():

    return get_random_password()
   
print(get_password())